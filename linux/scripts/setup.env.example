# Example configuration for setup-ftp.sh
# Recommended: place the repository at /opt/cnc-ftp-server/ for production systems

FTP_USER=cnc_ro
PUBLISHER_USER=publisher
FTP_USER_PASSWORD=
SSH_ALLOW_USERS="publisher ftpadmin"
HOSTNAME=cnc-ftp
INTERFACE_NAME=ens18
STATIC_IP_CIDR=192.168.10.50/24
GATEWAY=192.168.10.1
DNS_SERVERS="192.168.10.2 1.1.1.1"
FTP_ROOT=/srv/ftp
FTP_DATA_DIR=/srv/ftp/cnc-files
PASV_MIN_PORT=50000
PASV_MAX_PORT=50020
SSHD_SNIPPET_PATH=/etc/ssh/sshd_config.d/publisher.conf
AUTHORIZED_KEYS_DIR=/etc/ssh/authorized_keys
PUBLISHER_PUBLIC_KEY=
VSFTPD_CONF_PATH=/etc/vsftpd.conf
VSFTPD_USER_LIST_PATH=/etc/vsftpd.user_list
SYSCTL_CONF_PATH=/etc/sysctl.d/99-ftp-hardening.conf
APPARMOR_DIR=/etc/apparmor.d
INSTALL_PACKAGES=yes
RESTART_SERVICES=yes
RESTART_NETWORKING=no
